{
  "manifest_version": 3,
  "name": "Currency Extensions Typescript",
  "description": "Exchange rates",
  "version": "1.0",
  "action": {
    "default_title": "Action Button"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ], 
  "icons": {
    "48": "images/typescript-48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [   "popup.html" ],
      "matches": [ "<all_urls>" ]
    }
  
]
}